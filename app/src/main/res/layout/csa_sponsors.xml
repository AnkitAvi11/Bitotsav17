<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:nestedScrollingEnabled="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bitmesra.bitotsav.ui.CustomTextView
            android:id="@+id/csa_our_sponsors"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:text="Our Sponsors"
            android:textColor="@color/colorAccent"
            android:textSize="60sp"
            app:font="Oswald/Oswald_Regular.ttf" />

        <View
            android:id="@+id/csa_our_sponsors_underline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/csa_our_sponsors"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/csa_copresented"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/csa_our_sponsors_underline"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Co-presented by"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

        <LinearLayout
            android:id="@+id/csa_copresenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/csa_copresented"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sponsor_copresented_hp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:padding="8dp"
                android:src="@drawable/sponsor_copresented_intel" />
        </LinearLayout>

        <View
            android:id="@+id/csa_our_sponsors_underline_two"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/csa_copresenter"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/csa_other_sponsors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/csa_our_sponsors_underline_two"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Other Sponsors"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/csa_other_sponsors"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:src="@drawable/sponsors_telecom" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:src="@drawable/sponsor_payment" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:src="@drawable/sponsor_food" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Telecom Partner"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Payment Gateway Partner"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Food \nPartner"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:scaleType="centerInside"
                    android:src="@drawable/sponsor_major_sbi" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_event_discovery" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_poker" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Major\nSponsor"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Event\nPartner"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Poker\nPartner"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:scaleType="centerInside"
                    android:src="@drawable/sponsor_major" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_event" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_banking" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Major\nPartner"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Event\nPartner"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Banking\nPartner"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:scaleType="centerInside"
                    android:src="@drawable/sponsor_arts_crafts" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_driven_by" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_csr" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Art and Craft\nPartner"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Driven By\nPartner"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="CSR\nPartner"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</ScrollView>
