<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:nestedScrollingEnabled="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bitmesra.bitotsav.ui.CustomTextView
            android:id="@+id/csa_our_sponsors"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:text="Our Sponsors"
            android:textColor="@color/colorAccent"
            android:textSize="60sp"
            app:font="Oswald/Oswald_Regular.ttf" />

        <View
            android:id="@+id/csa_our_sponsors_underline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/csa_our_sponsors"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorAccent" />

        <com.bitmesra.bitotsav.ui.CustomTextView
            android:id="@+id/csa_title_sponsor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/csa_our_sponsors_underline"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Title Sponsor"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/title_sponsor"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/csa_title_sponsor"
            android:src="@drawable/sponsor_title" />

        <com.bitmesra.bitotsav.ui.CustomTextView
            android:id="@+id/csa_copresented"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_sponsor"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Co-presented by"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

        <LinearLayout
            android:id="@+id/csa_copresenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/csa_copresented"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sponsor_copresented_hp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:padding="8dp"
                android:src="@drawable/sponsor_copresented_intel" />
        </LinearLayout>

        <View
            android:id="@+id/csa_our_sponsors_underline_two"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/csa_copresenter"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorAccent" />

        <com.bitmesra.bitotsav.ui.CustomTextView
            android:id="@+id/csa_other_sponsors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/csa_our_sponsors_underline_two"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Other Sponsors"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/csa_other_sponsors"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--Driven by-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_driven_by" />
                <!--Major-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:scaleType="centerInside"
                    android:src="@drawable/sponsor_major_sbi" />
                <!--Major-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:scaleType="centerInside"
                    android:src="@drawable/sponsor_major" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--Driven by-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Driven By"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />
                <!--Major-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Major\nSponsor"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />
                <!--Major-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Major\nPartner"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--Banking-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_banking" />
                <!--Art Craft-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:scaleType="centerInside"
                    android:src="@drawable/sponsor_arts_crafts" />
                <!--Telecom-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:src="@drawable/sponsors_telecom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--Banking-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Banking\nPartner"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />
                <!--Art craft-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Art and Craft\nPartner"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />
                <!--Telecom-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Telecom\nPartner"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--Poker-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_poker" />
                <!--Payment Sponsor-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:src="@drawable/sponsor_payment" />
                <!--Food sponsor-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:src="@drawable/sponsor_food" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--POker-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Poker\nPartner"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />
                <!--Payment gateway-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Payment Gateway Partner"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />
                <!--Food-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Food\nPartner"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--CSR-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_csr" />
                <!--Event-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_event_discovery" />
                <!--Events-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="33"
                    android:src="@drawable/sponsor_event" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--CSR-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="CSR\nPartner"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />
                <!--Event-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Event\nPartner"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />
                <!--Event-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Event\nPartner"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--Event-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="100"
                    android:src="@drawable/sponsor_event_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--Event-->
                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Event\nPartner"
                    android:textColor="@color/card_text"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</ScrollView>


