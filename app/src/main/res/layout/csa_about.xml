<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:nestedScrollingEnabled="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bitmesra.bitotsav.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="About us:"
            android:textColor="@color/colorAccent"
            android:textSize="60sp"
            app:font="Oswald/Oswald_Regular.ttf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorAccent" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="8dp"
            android:padding="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gaurav_cover" />

                <com.bitmesra.bitotsav.ui.RoundedImageView
                    android:id="@+id/gaurav_dp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/timeline_circle"
                    android:src="@drawable/gauravdp" />

                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:id="@+id/gaurav_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gaurav_dp"
                    android:layout_marginTop="84dp"
                    android:gravity="center"
                    android:text="Gaurav Chaddha"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp"
                    app:font="Oswald/Oswald_Regular.ttf" />

                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gaurav_name"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="I like Android/Music\nI developed the app"
                    android:textColor="@color/card_text"
                    android:textSize="24sp"
                    app:font="Lato/Lato_Regular.ttf" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="8dp"
            android:padding="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/praneetcover" />

                <com.bitmesra.bitotsav.ui.RoundedImageView
                    android:id="@+id/praneet_dp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="144dp"
                    android:background="@drawable/timeline_circle"
                    android:src="@drawable/praneetdp" />

                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:id="@+id/praneet_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/praneet_dp"
                    android:gravity="center"
                    android:text="Praneet Mathur"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp"
                    app:font="Oswald/Oswald_Regular.ttf" />

                <com.bitmesra.bitotsav.ui.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/praneet_name"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="I study architecture\nI Designed the UI"
                    android:textColor="@color/card_text"
                    android:textSize="24sp"
                    app:font="Lato/Lato_Regular.ttf" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>
