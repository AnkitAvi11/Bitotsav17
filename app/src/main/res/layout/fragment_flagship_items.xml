<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/stomptheyard"
        android:transitionName="event_image" />

    <LinearLayout
        android:id="@+id/flagship_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.bitmesra.bitotsav.ui.CustomTextView
            android:id="@+id/flagship_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pukaar"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:transitionName="event_title_time_venue"
            app:font="oswald/oswald_regular.ttf" />

        <com.bitmesra.bitotsav.ui.CustomTextView
            android:id="@+id/flagship_organizing_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Show your inner drama queen #tanmay"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:transitionName="event_desc"
            android:visibility="gone"
            app:font="lato/lato_regular.ttf" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/subscribedButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/background_image"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:padding="-8dp"
        android:scaleType="center"
        android:src="@drawable/ic_no_bell"
        android:transitionName="event_subscribe_button"
        app:backgroundTint="@color/toolbar_text" />
</RelativeLayout>