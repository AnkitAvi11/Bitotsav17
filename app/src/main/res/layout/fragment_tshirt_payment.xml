<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_text"
    tools:context="com.bitmesra.bitotsav.features.events.EventsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/teeid_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/TextAppearance.Design.Error"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/teeitid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hey Gamer! What is your TEE ID?"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/card_background"
                    android:textColorHint="@color/card_background" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/TextAppearance.Design.Error"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Registered Email Id"
                    android:inputType="textEmailAddress"
                    android:selectAllOnFocus="true" />

            </android.support.design.widget.TextInputLayout>

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/tshirt_dropdown"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:ms_baseColor="@color/colorAccent"
                app:ms_floatingLabelColor="@color/card_background"
                app:ms_highlightColor="@color/card_background"
                app:ms_hint="Select a size"
                app:ms_hintColor="@color/colorAccent" />

            <Button
                android:id="@+id/payment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@color/opaque_black"
                android:padding="8dp"
                android:text="Pay"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

            <com.bitmesra.bitotsav.ui.CustomTextView
                android:id="@+id/check_your_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Check your details"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:visibility="gone" />

            <com.bitmesra.bitotsav.ui.CustomTextView
                android:id="@+id/payinfo_teeid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="id"
                android:textSize="25sp"
                android:visibility="gone" />

            <com.bitmesra.bitotsav.ui.CustomTextView
                android:id="@+id/payinfo_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="email"
                android:textSize="25sp"
                android:visibility="gone" />

            <com.bitmesra.bitotsav.ui.CustomTextView
                android:id="@+id/payinfo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="name"
                android:textSize="25sp"
                android:visibility="gone" />

            <com.bitmesra.bitotsav.ui.CustomTextView
                android:id="@+id/payinfo_college"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="college"
                android:textSize="25sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/proceed_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@color/opaque_black"
                android:padding="8dp"
                android:text="Proceed"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
