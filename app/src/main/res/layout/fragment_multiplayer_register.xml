<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_background"
    tools:context="com.bitmesra.bitotsav.features.events.EventsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/teamname_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/teamname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Enter your team name"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/headbitit_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/headbitid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Team Head BIT Registration Id"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/commaid_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/commaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Comma Seperated BIT ID of members"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailhead_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Email Id of Team Head"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/teamphone_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/teamphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Team Head Contact Number"
                android:inputType="phone"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/college_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/college"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Enter your college name"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>
        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/events_dropdown"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:ms_hintColor="@color/colorAccent"
            app:ms_baseColor="@color/colorAccent"
            android:background="@color/opaque_black"
            app:ms_highlightColor="@color/card_text"
            app:ms_floatingLabelColor="@color/card_text"
            app:ms_hint="Choose an event"/>
        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@color/opaque_black"
            android:padding="8dp"
            android:text="Register"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
