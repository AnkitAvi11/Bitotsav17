<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_background"
    tools:context="com.bitmesra.bitotsav.features.events.EventsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/support_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/opaque_black"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/first_name_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Enter your first name"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/last_name_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Enter your last name"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Enter your email address"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/phone_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Enter your phone number"
                android:inputType="phone"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/branchbatch_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/branchbatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Enter your branch, banch(If BITian)"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/msg_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/singleplayer_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/Registration">

            <EditText
                android:id="@+id/msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_text"
                android:hint="Enter your message"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textColor="@color/card_text" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/donate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@color/opaque_black"
            android:padding="8dp"
            android:text="Donate now"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
