<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nav_background"
    tools:context="com.bitmesra.bitotsav.features.events.EventsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/opaque_black"
        android:orientation="vertical">

        <com.bitmesra.bitotsav.ui.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="T-Shirt Front"
            android:textColor="@color/colorAccent"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:src="@drawable/tshirt_front" />
        <com.bitmesra.bitotsav.ui.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="T-Shirt Back"
            android:textColor="@color/colorAccent"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:src="@drawable/tshirt_back" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
