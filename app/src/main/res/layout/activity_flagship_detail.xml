<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context="com.bitmesra.bitotsav.features.details.DetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:minHeight="150dp"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/saptak"
                android:transitionName="event_image"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            </android.support.v7.widget.Toolbar>

            <com.bitmesra.bitotsav.ui.CustomTextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|left"
                android:paddingBottom="32dp"
                android:paddingLeft="48dp"
                android:text="Bitotsav"
                android:textColor="@color/toolbar_text"
                android:textSize="30sp"
                android:transitionName="event_title"
                app:font="Oswald/Oswald_SemiBold.ttf" />

            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:alpha="0.6"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"
                android:src="@color/card_background" />


        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/star_subscribe"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="center"
        android:padding="-8dp"
        android:backgroundTint="@color/toolbar_text"
        android:src="@drawable/ic_bell"
        android:transitionName="event_subscribe_button" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="8dp">

            <com.bitmesra.bitotsav.ui.CustomTextView
                android:id="@+id/detail_time_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="9pm at Shor bagh"
                android:textColor="@color/card_text"
                android:textSize="20sp"
                android:transitionName="event_title_time_venue"
                app:font="Lato/Lato_Regular.ttf" />

            <com.bitmesra.bitotsav.ui.CustomTextView
                android:id="@+id/detail_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sample_desc"
                android:textColor="@color/darker_white"
                android:textSize="21sp"
                android:transitionName="event_desc"
                app:font="Lato/Lato_Regular.ttf"
                tools:text="@string/sample_desc_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorAccent" />

            <com.bitmesra.bitotsav.ui.CustomTextView
                android:id="@+id/detail_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sample_desc"
                android:textColor="@color/darker_white"
                android:textSize="20sp"
                app:font="Lato/Lato_Regular.ttf"
                tools:text="These are some rules" />

            <com.bitmesra.bitotsav.ui.CustomTextView
                android:id="@+id/detail_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Prize money: 15000"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                app:font="Lato/Lato_Regular.ttf" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>
